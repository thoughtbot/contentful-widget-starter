{
  "name": "my-new-widget",
  "version": "0.0.1",
  "private": "true",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --watch",
    "widget:create": "better-npm-run widget:create",
    "widget:update": "better-npm-run widget:update",
    "widget:dev": "better-npm-run widget:dev",
    "widget:list": "better-npm-run widget:list"
  },
  "betterScripts": {
    "widget:create": {
      "command": "contentful-widget create --space-id $SPACE_ID"
    },
    "widget:update": {
      "command": "contentful-widget update --space-id $SPACE_ID --force"
    },
    "widget:dev": {
      "command": "contentful-widget update --space-id $SPACE_ID --force --src 'http://localhost:3030/index.html' && python -m SimpleHTTPServer 3030"
    },
    "widget:list": {
      "command": "contentful-widget read --all --space-id $SPACE_ID"
    }
  },
  "author": "thoughtbot",
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "better-npm-run": "0.0.8",
    "contentful-widget-cli": "^1.1.3",
    "contentful-widget-sdk": "^0.1.1",
    "css-loader": "^0.23.1",
    "ejs-loader": "^0.2.1",
    "html-webpack-plugin": "^2.19.0",
    "node-sass": "^3.7.0",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1"
  }
}
